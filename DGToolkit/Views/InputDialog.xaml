<Window x:Class="DGToolkit.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DGToolkit.Views"
        mc:Ignorable="d"
        Title="InputDialog" Height="*" Width="300" Padding="10">
    <StackPanel>
        <GroupBox Header="Input" Name="Title">
            <TextBox Name="Input" Margin="2"></TextBox>
        </GroupBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Margin="0 0 10 0" Click="CancleOnClick">cancel</Button>
            <Button Padding="10 0" Click="OkOnClick">Ok</Button>
        </StackPanel>
    </StackPanel>
</Window>